{
    "name": "detailnet/bernard-module",
    "description": "Bernard Module for Zend Framework 2",
    "type": "library",
    "keywords": [
        "bernard",
        "module",
        "zf2"
    ],
    "homepage": "https://github.com/detailnet/bernard-module/",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Wolf",
            "email": "ivan.wolf@detailnet.ch"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "psr/log": "~1.0",
        "bernard/bernard": "0.12.*",
        "zendframework/zend-console": "2.*",
        "zendframework/zend-loader": "2.*",
        "zendframework/zend-modulemanager": "2.*",
        "zendframework/zend-mvc": "2.*",
        "zendframework/zend-servicemanager": "2.*",
        "detailnet/dfw-core": "~0.2",
        "detailnet/dfw-bernard": "~0.1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4.5",
        "squizlabs/php_codesniffer" : "~2.2.0",
        "phpmd/phpmd": "~2.1.3",
        "satooshi/php-coveralls": "dev-master",
        "iron-io/iron_mq": "~1.5",
        "detailnet/dfw-log": "~0.2.0"
    },
    "suggest": {
        "iron-io/iron_mq": "For usage with the IronMQ driver",
        "detailnet/dfw-log": "For usage of the \"bernard consume ...\" console command"
    },
    "autoload": {
        "psr-0": {
            "Detail\\Bernard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "DetailTest\\Bernard\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "archive": {
        "exclude": [
            "!vendor",
            "tests",
            "*phpunit.xml",
            ".travis.yml",
            "build.xml",
            "build.properties",
            "composer.phar"
        ]
    }
}
